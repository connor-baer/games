---
import Layout from '../../layouts/Wizard.astro';
import Header from '../../components/wizard/Header.svelte';
import BidsForm from '../../components/wizard/BidsForm.svelte';

const title = 'Bids';
const description =
  'Each player predicts how many tricks they will take this round.';
---

<Layout
  title={title}
  description={description}
  link={{ label: 'Scores', href: '/wizard/scores' }}
>
  <Header title={title} description={description} />

  <BidsForm client:load />
</Layout>
